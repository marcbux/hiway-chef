<configuration>
    <property>
        <name>hiway.am.directory.base</name>
        <value><%= node[:hiway][:hiway][:hdfs][:basedir] %></value>
    </property>
    <property>
        <name>hiway.am.directory.cache</name>
        <value>hiway</value>
    </property>
    <property>
        <name>hiway.am.memory</name>
        <value><%= node[:hiway][:hiway][:am][:memory_mb] %></value>
        <description>Amount of memory in MB to be requested to run the application master. Default 1024.</description>
    </property>
    <property>
        <name>hiway.am.priority</name>
        <value>0</value>
    </property>
    <property>
        <name>hiway.am.queue</name>
        <value>default</value>
    </property>
    <property>
        <name>hiway.am.task.retries</name>
        <value>1</value>
    </property>
    <property>
        <name>hiway.am.vcores</name>
        <value>1</value>
    </property>
    <property>
        <name>hiway.am.timeout</name>
        <value>604800</value>
        <description>Application timeout in seconds. Default: 7 days.</description>
    </property>
    <property>
        <name>hiway.db.sql.password</name>
        <value></value>
    </property>
    <property>
        <name>hiway.db.sql.url</name>
        <value></value>
    </property>
    <property>
        <name>hiway.db.sql.user</name>
        <value></value>
    </property>
    <property>
        <name>hiway.db.nosql.bucket</name>
        <value></value>
    </property>
    <property>
        <name>hiway.db.nosql.password</name>
        <value></value>
    </property>
    <property>
        <name>hiway.db.nosql.urls</name>
        <value></value>
    </property>
    <property>
        <name>hiway.db.type</name>
        <value>local</value>
        <description>valid values: local, SQL, NoSQL</description>
    </property>
    <property>
        <name>hiway.galaxy.path</name>
        <value><%= node[:hiway][:galaxy][:home] %></value>
    </property>
    <property>
        <name>hiway.scheduler</name>
        <value><%= node[:hiway][:hiway][:scheduler] %></value>
        <description>valid values: c3po, cloning, conservative, greedyQueue, heft, outlooking, placementAware, staticRoundRobin</description>
    </property>
    <property>
        <name>hiway.worker.memory</name>
        <value><%= node[:hiway][:hiway][:worker][:memory_mb] %></value>
    </property>
    <property>
        <name>hiway.worker.priority</name>
        <value>0</value>
    </property>
    <property>
        <name>hiway.worker.shell.env</name>
        <value></value>
    </property>
    <property>
        <name>hiway.worker.vcores</name>
        <value>1</value>
    </property>
</configuration>
